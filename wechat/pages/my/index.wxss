/* pages/my/index.wxss */
.user-info-box {
  border-radius: 16rpx;
}

.user-detail {
  flex: 1;
  margin-left: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.notes-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.empty-notes {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-notes image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}